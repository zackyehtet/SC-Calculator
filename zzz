<body><div class="container">  <!-- First Group -->  <div class="group">
    <h1>Sc Calculator</h1>
    <div class="row">
      <input type="number" id="A" placeholder="SC Price" />
      <input type="number" id="C" placeholder="Percent" />
    </div>
    <button onclick="calculateAll()">Calculate</button>
  </div>  <!-- Second Group -->  <div class="group">
    <h2>MLBB</h2>
    <table><tbody id="mlbbResult"></tbody></table>
    <button class="copy-btn" onclick="copyResult('mlbbResult')">Copy Result</button>
  </div>  <!-- Third Group -->  <div class="group">
    <h2>MCGG</h2>
    <table><tbody id="mcggResult"></tbody></table>
    <button class="copy-btn" onclick="copyResult('mcggResult')">Copy Result</button>
  </div></div><script>
  const MLBB_B = [76, 61.5, 122, 177.5, 480, 1453, 2424, 3660, 6079, 12, 39, 116.9, 187.5, 385, 402.5];
  const MCGG_B = [99.9, 40, 120, 200, 400, 62.5, 125, 187, 250, 375, 500, 937.5, 1250, 1500, 2500, 3750, 6250];

  function calculate(list, target) {
    const A = parseFloat(document.getElementById('A').value);
    const C = parseFloat(document.getElementById('C').value);
    const box = document.getElementById(target);
    box.innerHTML = '';
    if (isNaN(A) || isNaN(C)) return;
    list.forEach(B => {
      const D = (A * B) + (A * B * (C / 100));
      box.innerHTML += `<tr><td>${B}</td><td>${D.toFixed(2)}</td></tr>`;
    });
  }

  function calculateAll() {
    calculate(MLBB_B, 'mlbbResult');
    calculate(MCGG_B, 'mcggResult');
  }

  function copyResult(id) {
    let text = '';
    document.querySelectorAll(`#${id} tr`).forEach(row => {
      text += row.innerText + '\n';
    });
    navigator.clipboard.writeText(text);
    alert('Copied');
  }
</script></body>
</html>
